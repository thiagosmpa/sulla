# Use a imagem base do Python 3.10
FROM python:3.10

# Defina o diretório de trabalho
WORKDIR /app

# Instale o Git
RUN apt-get update && apt-get install -y git

# Inicialize um novo repositório Git
RUN git init

# Adicione o repositório remoto
RUN git remote add -f origin https://github.com/thiagosmpa/sulla.git

# Habilite o sparse-checkout e defina a pasta desejada
RUN git config core.sparseCheckout true
RUN echo "chatgpt" >> .git/info/sparse-checkout

# Faça o checkout do repositório
RUN git pull origin main

# Navegue para o diretório desejado
WORKDIR /app/chatgpt

# Instale as dependências listadas em requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copie o restante do código da aplicação para o diretório de trabalho
COPY . .

# Exponha a porta 3004
EXPOSE 3004

# Comando para iniciar a aplicação
CMD ["python", "app.py"]
