{
	"compilerOptions": {
		"target": "ES2017",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": false,
		"skipLibCheck": true,
		"lib": ["ESNext"],
		"outDir": "dist/",
		"baseUrl": ".",
		"rootDir": "src",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
